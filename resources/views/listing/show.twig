{% extends 'layouts.default' %}

{% block content %}

    <div class="flex flex-wrap -mx-4 mt-8">
        <div class="w-full md:w-2/3">
            <div class="mx-2 shadow-lg bg-white rounded overflow-hidden">
                <img class="w-full" src="{{ asset('storage/' ~ listing.image.filename) }}" alt="">

                <div class="px-6 py-4">
                    <h1 class="mt-0 mb-4">{{ listing.title }}</h1>
                    <p class="mb-4">{{ listing.description }}</p>
                    <p class="mb-4">{{ 'â‚¬ ' ~ (listing.price/100)|number_format(2, ',', '.') }}</p>
                </div>
            </div>
        </div>

        <div class="w-full md:w-1/3">
            <div class="ml-8 mr-2 shadow-lg bg-yellow-lighter rounded px-6 py-4">
                <h2 class="mt-0 mb-4">{{ listing.author.name }}</h2>
                
                <p class="mb-4">
                    <strong>Email</strong><br>
                    {{ listing.author.email }}
                </p>

                <p class="mb-4">
                    <strong>Postcode</strong><br>
                    {{ listing.author.userProfile.postcode }}
                </p>

                <p>
                    <strong>Phone number</strong><br>
                    {{ listing.author.userProfile.phone_number }}
                </p>
            </div>
        </div>
    </div>

{% endblock %}