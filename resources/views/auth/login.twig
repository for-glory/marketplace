{% extends 'layouts.default' %}

{% block content %}
<div class="flex flex-col w-1/2 mx-auto">
        
    <h1 class="mt-8 mb-4">{{ __('Login') }}</h1>

    <form method="POST" action="{{ route('login') }}" class="flex flex-col">
        {{ csrf_field() }}

        <label for="email" class="">{{ __('E-Mail Address') }}</label>
        <input id="email" type="email" class="border px-4 py-2 mb-4{{ errors.has('email') ? ' is-invalid' : '' }}" name="email" value="{{ old('email') }}" required autofocus>

        {% if errors.has('email') %}
            <span class="invalid-feedback">
                <strong>{{ errors.first('email') }}</strong>
            </span>
        {% endif %}
        
        <label for="password" class="">{{ __('Password') }}</label>
        <input id="password" type="password" class="border px-4 py-2 mb-4{{ errors.has('password') ? ' is-invalid' : '' }}" name="password" required>

        {% if errors.has('password') %}
            <span class="invalid-feedback">
                <strong>{{ errors.first('password') }}</strong>
            </span>
        {% endif %}

        <div class="flex items-center mb-8">
            <label>
                <input type="checkbox" name="remember" {{ old('remember') ? 'checked' : '' }}> {{ __('Remember Me') }}
            </label>

            <button type="submit" class="inline-block hover:bg-pink bg-pink-light rounded-full ml-auto px-8 py-3 text-sm font-semibold no-underline text-white">
                {{ __('Login') }}
            </button>
        </div>

        <a class="" href="{{ route('password.request') }}">
            {{ __('Forgot Your Password?') }}
        </a>
    </form>
</div>
{% endblock %}
