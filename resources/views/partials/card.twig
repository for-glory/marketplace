<div class="rounded overflow-hidden shadow-lg bg-white mx-2 mb-6">
    <a href="{{ url }}">
        <img class="w-full" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTaaR2E296E2xnRd6g5S_YrsyuYhLFS5AQw-b057JNM9l70kKkY" alt="">
    </a>

    <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2">{{ title }}</div>
        <p class="text-grey-darker text-base">
            {{ description|length > 250 ? description|slice(0, 250) ~ '...' : description  }}
        </p>
    </div>

    <div class="px-6 py-4 flex items-center">
        <span class="text-grey-dark">{{ price }}</span>

        <a href="{{ url }}" class="inline-block hover:bg-blue bg-blue-light rounded-full ml-auto px-8 py-3 text-sm font-semibold no-underline text-white">
            Buy
        </a>
    </div>
</div>
